[core]
    pager = cat

[alias]
    gl  = log -10 --color=always --all --graph --topo-order --pretty='format: %Cgreen%h%Creset %s%Cred%d%Creset%n'
    gll = log     --color=always --all --graph --topo-order --pretty='format: %Cgreen%h%Creset %s%Cred%d%Creset%n'

    com = commit
    cm = commit -m

    co = checkout

    stat = status
    st = status

    unstage = reset HEAD
    uns = reset HEAD

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto

[credential "https://github.com"]
	username = wjwwood
[push]
	default = simple
[credential]
	helper = osxkeychain
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
# Always use ssh for github, even if the remote URL uses
# https or git
[url "git@github.com:"]
  insteadOf = git://github.com/
[url "git@github.com:"]
  insteadOf = https://github.com/
